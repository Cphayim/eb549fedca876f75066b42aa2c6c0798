/**app.wxss**/

page {
  position: relative;
  min-height: 100%;
  background-color: #f4f4f4;
}

.section {
  margin-bottom: 20rpx;
  /* box-shadow: 0 0 30rpx #eaeaea; */
  background-color: #fff;
}

.pd {
  padding: 25rpx 30rpx;
}

.hover {
  position: relative;
}

.hover::after {
  position: absolute;
  z-index: 50;
  top: 0%;
  bottom: 0%;
  left: 0%;
  right: 0%;
  display: block;
  content: '';
  background-color: rgba(32, 32, 32, 0.1);
}
