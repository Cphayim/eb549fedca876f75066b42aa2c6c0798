/* components/hd-label/hd-label.wxss */
@import '../common.wxss';

.m-hd-label {
  display: flex;
  align-items: center;
  border-bottom: 1.5rpx solid #dfdfdf;
  background-color: #fff;
}

.title {
  flex: 1 1 auto;
  /* height: ; */
  padding:0 10rpx;
  border-left: 10rpx solid #54b4ef;
  line-height: 40rpx; 
  font-size: 32rpx;
  color: #333;
}

.more {
  flex: 0 0 auto;  
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}
.more .more-arrow{
  width: 18rpx;
  height: 28rpx;
  margin-left: 10rpx;
}