/* base/form-control/form-item.wxss */
@import '../common.wxss';
.u-form-item {
  display: flex;
  align-items: center;
  padding: 25rpx 64rpx;
}

.item-l {
  flex: 0 0 180rpx;
  font-size: 28rpx;
  color: #333;
}

.item-r {
  flex: 1 1 auto;
  display: flex;
  justify-content: flex-end;
  padding-right: 20rpx;
  position: relative;
}

.item-r.arrow::after {
  display: block;
  position: absolute;
  top: 50%;
  right: -32rpx;
  content: '';
  width: 22rpx;
  height: 30rpx;
  transform: translateY(-50%);
  background-image: url("data:image/png;base64,");
  background-size: 100% 100%;
}
