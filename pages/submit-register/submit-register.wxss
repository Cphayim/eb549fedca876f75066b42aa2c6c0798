/* pages/submit-register/submit-register.wxss */
page{
  border-top: 1rpx solid #dfdfdf;
}

.p-submit-order {
}

.pd {
  border-bottom: 1.5rpx solid #dfdfdf;
}

.pd:last-child {
  border: none;
}

.m-valuation{
  font-size: 28rpx;
}

.m-valuation .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 4rpx;
  color: #333;
}

.m-valuation .price,.m-valuation .total-price{
  font-size: 32rpx;
  color: #f63;
}
.m-valuation .tip {
  flex: 0 0 150rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #f63;
}

.m-valuation .item,.m-order-form .item{
  border-bottom: 1rpx solid #dfdfdf;
}
.m-order-form .item:first-child{
  border-top: 1rpx solid #dfdfdf;
}


.wrap{
  position: relative;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 400rpx;
}

input {
  /* 扩大可点击 focus 区域 */
  position: absolute;
  top: 50%;
  width: 100%;
  height: 90rpx;
  min-height: auto;
  flex: 1;
  padding: 0;
  line-height: 1;
  font-size: 28rpx;
  text-align: right;
  transform: translateY(-50%);
  /* background-color: rgba(242, 242, 242, 0.3); */
}

picker{
  width: 100%;
  font-size: 28rpx;
  text-align: right;
}

.placeholder{
  color: #ccc;
}